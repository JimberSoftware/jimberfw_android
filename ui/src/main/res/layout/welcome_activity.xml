<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/base_layout" />

        <!-- Container LinearLayout to stack logo and text vertically -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"> <!-- Center content vertically and horizontally -->

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/logo_placeholder"
                style="@style/LogoStyle"
                android:layout_width="280dp"
                android:layout_height="111dp"
                android:src="@drawable/jimber_logo_full" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sign_in_button"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:text="@string/sign_in_to_your_account"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="40dp"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp"
                android:textStyle="bold"
                android:backgroundTint="@color/jimber_primary"
                android:drawableLeft="@drawable/ic_action_sign_in"
                app:cornerRadius="0dp"
              />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_connection_button"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:text="Add a connection"
                android:paddingLeft="15dp"
                android:paddingTop="0dp"
                android:paddingRight="15dp"
                android:paddingBottom="0dp"
                android:textStyle="bold"
                android:backgroundTint="@color/jimber_primary"
                android:drawableLeft="@drawable/ic_action_add_white"
                app:cornerRadius="0dp"
              />

        </LinearLayout>

    </FrameLayout>

</layout>